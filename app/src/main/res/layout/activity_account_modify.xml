<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".AccountModifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="회원 정보"
                android:fontFamily="@font/soyo_maple"
                android:textColor="#FF9800"
                android:textSize="50dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/iu1"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/black"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    android:layout_marginBottom="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_profile_modify"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border2"
                    android:fontFamily="@font/soyo_maple"
                    android:layout_gravity="center"
                    android:text="프로필 사진 변경"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_sighname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="이름"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="525dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/soyo_maple"
                    android:hint=" 이름"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/signIDtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="아이디"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="526dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/soyo_maple"
                    android:hint=" 아이디"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/signBirthtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="생년월일"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="655dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_birth"
                        android:layout_width="528dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="63dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/soyo_maple"
                        android:hint=" 생년월일 입력"
                        android:text=""
                        android:layout_marginTop="20dp"/>

                    <ImageButton
                        android:id="@+id/btn_calendar"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/signPWtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="비밀번호"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>


                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="528dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/soyo_maple"
                    android:hint=" 비밀번호"
                    android:inputType="textPassword"
                    android:text=""
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/signPW2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="비밀번호 확인"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="655dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_repass"
                        android:layout_width="525dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="63dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/soyo_maple"
                        android:hint=" 비밀번호 다시 입력"
                        android:inputType="textPassword"

                        android:text="" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_passcheck"
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border2"
                        android:fontFamily="@font/soyo_maple"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/signmailtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/soyo_maple"
                    android:text="이메일"
                    android:textColor="#FF9800"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/et_mail"
                    android:layout_width="535dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/soyo_maple"
                    android:hint=" 이메일"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_marginTop="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/border2"
                    android:text="저장"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>