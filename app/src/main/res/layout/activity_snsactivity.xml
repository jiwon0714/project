<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/add"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="🔍검색"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/add"
        android:layout_toLeftOf="@id/home"
        />
    <ImageButton
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:id="@+id/usernamebar"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_profile"
            android:src="@mipmap/ic_launcher"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="User name"
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/mainimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/pinokio"
        android:layout_below="@id/usernamebar"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/function_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainimage"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/heart"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/chat"/>
    </LinearLayout>
    <TextView
        android:id="@+id/favoritecounter"
        android:layout_below="@id/function_nav"
        android:text="좋아요 0개"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/snsmain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/favoritecounter"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#CCCCCC"
        android:gravity="center"
        android:text="글" />
    <LinearLayout
        android:layout_below="@+id/snsmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chat2"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"/>
    </LinearLayout>

</RelativeLayout>