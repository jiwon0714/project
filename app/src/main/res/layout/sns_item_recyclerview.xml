<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/usernamebar"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/img_profile"
                android:src="@mipmap/ic_launcher"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:text="User_name"
                android:id="@+id/tv_profile"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:src="@drawable/pinokio"
            android:layout_below="@id/usernamebar"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:id="@+id/function_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_image"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/heart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/heart"
                android:layout_marginLeft="5dp" />
            <ImageButton
                android:id="@+id/chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/chat" />

        </LinearLayout>
        <TextView
            android:id="@+id/favoritecounter"
            android:layout_below="@id/function_nav"
            android:text="좋아요 0개"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sns_main"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/favoritecounter"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#CCCCCC"
            android:gravity="center"
            android:text="글" />
        <LinearLayout
            android:layout_below="@+id/sns_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chat2"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/comment_name"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                />
            <TextView
                android:id="@+id/comment"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"/>
        </LinearLayout>
</LinearLayout>