<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/dialogPutdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="yyyy.MM.dd."
        android:textSize="35dp" />

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#FFFFFFFF"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dialogPutdate"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp" />

    <!--구분선-->
    <View
        android:id="@+id/bar"
        android:layout_width="230dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/dialogPutdate"
        android:layout_centerHorizontal="true"
        android:background="#aaa"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/bar2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialogImageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerInside"
                android:src="@drawable/pinokio_circle" />


            <EditText
                android:id="@+id/dialogTextView"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_below="@+id/bar"
                android:text="dddddddd"
                android:textSize="35dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pic"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@color/green"
            android:text="사진"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@color/green"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>





</RelativeLayout>